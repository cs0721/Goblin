@model Assignment_Di.Models.Characters

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/s1.css" rel="stylesheet" type="text/css" />
<link href="~/Content/createTable1.css" rel="stylesheet" type="text/css" />

<h2 style="font-weight:800">Delete Character</h2> <br />

<div class="Message1">
    Are you sure you want to delete this Character?
</div>
<p />
<h2><@Html.DisplayFor(model => model.CharacterName)></h2> <br />
<table class="delete">
    <tr>
        <th width="200">NAME</th>
        <td width="30"></td>
        <td width="400">
            @Html.DisplayFor(model => model.CharacterName)
        </td>
    </tr>
    <tr class="height"></tr>
    <tr>
        <th>CHARACTER GROUP</th>
        <td></td>
        <td>
            @Html.DisplayFor(model => model.CharacterGroup)
        </td>
    </tr>
    <tr class="height"></tr>
    <tr>
        <th>ACTOR</th>
        <td></td>
        <td>@Html.DisplayFor(model => model.Actors.ActorName)</td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <br /> <br />
        <input class="OneButton" type="submit" value="Delete" />
        <button class="OneButton" onclick="location.href='@Url.Action("Index", "Characters")';
            return false;">
            Back to List
        </button>
    </p>
}

